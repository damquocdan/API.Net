@model AppClient.Models.Book

@{
    ViewData["Title"] = "Chỉnh sửa sách";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="BookCode">Mã độc giả</label>
        <input type="text" class="form-control" id="BookCode" name="BookCode" value="@Model.BookCode" required />
    </div>
    <div class="form-group">
        <label for="Author">Tên độc giả</label>
        <input type="text" class="form-control" id="Author" name="Author" value="@Model.Author" required />
    </div>
    <div class="form-group">
        <label for="Category">Số điện thoại</label>
        <input type="text" class="form-control" id="Category" name="Category" value="@Model.Category" />
    </div>
    <div class="form-group">
        <label for="PublishDate">Ngày mượn sách</label>
        <input type="date" class="form-control" id="PublishDate" name="PublishDate" value="@Model.PublishDate?.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="BookName">Sách mượn</label>
        <input type="text" class="form-control" id="BookName" name="BookName" value="@Model.BookName" required />
    </div>
    <div class="form-group">
        <label for="Publisher">Ngày trả sách</label>
        <input type="date" class="form-control" id="Publisher" name="Publisher" />
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>

<a href="@Url.Action("Index", "Books")" class="btn btn-secondary mt-2">Quay lại danh sách</a>
